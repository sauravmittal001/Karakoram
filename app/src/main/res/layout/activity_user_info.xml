<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lv_top"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_top_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Top banner icon"
            android:src="@drawable/m2" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="24dp"
                android:background="@drawable/ic_background_user_info"
                android:paddingEnd="42dp"
                android:paddingBottom="42dp">

                <ImageView
                    android:id="@+id/iv_back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:contentDescription="Back Button"
                    android:onClick="back"
                    android:src="@drawable/ic_frame3" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/senbold"
                    android:lineSpacingMultiplier="1.25"
                    android:text="User Details"
                    android:textColor="@color/text700"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/tv_bill_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="top"
                    android:lineSpacingMultiplier="1.5"
                    android:text="Information used to pre-fill complaint and food feedback forms (excluding anonymous submits)"
                    android:textColor="@color/text700"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- user detail -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- entry no -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senregular"
                        android:text="Entry Number: "
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senbold"
                        android:text="201YDD#####"
                        android:textColor="@color/green"
                        android:textSize="18sp" />
                </LinearLayout>

                <!-- name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senregular"
                        android:text="Name: "
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senbold"
                        android:text="first-last-name"
                        android:textColor="@color/green"
                        android:textSize="18sp" />

                </LinearLayout>

                <!-- room no -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senregular"
                        android:text="Room Number: "
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.example.karakoram.views.CustomSpinner
                            android:id="@+id/spinner_floor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_background"
                            android:dropDownWidth="wrap_content"
                            android:entries="@array/floor" />

                        <com.example.karakoram.views.CustomSpinner
                            android:id="@+id/spinner_room_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/spinner_background"
                            android:dropDownWidth="wrap_content"
                            android:entries="@array/room_number" />

                    </LinearLayout>
                </LinearLayout>

                <!-- wing -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginStart="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/senregular"
                        android:text="Wing: "
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <com.example.karakoram.views.CustomSpinner
                            android:id="@+id/spinner_wing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/spinner_background"
                            android:dropDownWidth="wrap_content"
                            android:entries="@array/wing" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- save  button -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_info_save_button"
                    android:fontFamily="@font/senregular"
                    android:onClick="save"
                    android:text="SAVE"
                    android:textSize="20sp" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>